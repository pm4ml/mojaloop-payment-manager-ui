[
  {
    "ruleId": 1,
    "priority": 1,
    "description": "Fail transfer on quote lookup when amount is 1234.",
    "apiVersion": {
      "minorVersion": 1,
      "majorVersion": 1,
      "type": "fspiop",
      "asynchronous": true
    },
    "conditions": {
      "all": [
        {
          "fact": "body",
          "operator": "numericEqual",
          "value": "1234",
          "path": "amount.amount"
        },
        {
          "fact": "operationPath",
          "operator": "equal",
          "value": "/quotes"
        },
        {
          "fact": "method",
          "operator": "equal",
          "value": "post"
        }
      ]
    },
    "event": {
      "method": "put",
      "path": "/quotes/{ID}/error",
      "params": {
        "scripts": {
          "scriptingEngine": "postman"
        }
      },
      "type": "MOCK_ERROR_CALLBACK"
    },
    "type": "validation",
    "version": 1
  }
]